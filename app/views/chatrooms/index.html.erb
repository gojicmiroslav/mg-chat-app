<div class="row">
    <div class="col-sm-10 col-sm-offset-1 col-md-10 col-md-offset-1">
        <p id="notice"><%= notice %></p>

        <%= link_to 'Home', root_path, class: "btn btn-primary" %>

        <h2>Yours Chatrooms</h2>
        <hr />

        <% if @chatrooms.size > 0 %>
        <table class="table table-bordered table-hover table-condensed table-text">
            <thead>
              <tr class="warning">
                  <th><span class="text-primary"><strong>Name</strong></span></th>
                  <th colspan="3"></th>
              </tr>
            </thead>

            <tbody>
                <% @chatrooms.each do |chatroom| %>
                    <tr class="success">
                        <td><strong><span class="text-warning"><%= chatroom.name %></span></strong></td>
                        <td><strong><%= link_to 'Show', chatroom, class: "btn btn-primary btn-block" %></strong></td>             
                        <td>
                            <%= link_to 'Edit', edit_chatroom_path(chatroom), class: "btn btn-info btn-block"%>
                        </td>
                        <td>
                            <%= link_to 'Destroy', chatroom, method: :delete,                         
                                 data: { confirm: 'Are you sure?' }, class: "btn btn-info btn-block" %>
                        </td>
                    </tr>
                <% end %>
            </tbody>
        </table>
        <% else %>
            <h3><i>--No chatrooms--</i></h3>
        <% end %>

        <br>
        <%= link_to 'New Chatroom', new_chatroom_path, class: "btn btn-default" %>
    </div>
</div>
