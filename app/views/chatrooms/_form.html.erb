<%= form_for(chatroom) do |f| %>
    <% if chatroom.errors.any? %>
        <div id="error_explanation">
            <h4>
                <span class="label label-danger"><%= pluralize(chatroom.errors.count, "error") %> prohibited this chatroom from being saved:</span>
            </h4>

            <ul class="list-group">
                <% chatroom.errors.full_messages.each do |message| %>
                    <li class="list-group-item list-group-item-danger"><%= message %></li>
                <% end %>
            </ul>
        </div>
    <% end %>

    <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control', placeholder: "Chatroom name...", autofocus: true %>
    </div>

    <div class="form-group">
        <%= f.submit "Create Chatroom", class: "btn btn-primary btn-block" %>
    </div>
<% end %>


