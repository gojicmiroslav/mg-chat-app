<h1 class="text-center" style="margin-bottom: 40px; font-size:6rem">Welcome to Chat App</h1>

<div class="row">
	<div class="col-sm-3 col-sm-offset-3 col-md-5 col-md-offset-1">
  		<%= link_to chatrooms_path, class: "btn btn-default btn-lg btn-block" do %>
			<strong>Chat</strong>
		<% end %>
	</div>
	<div class="col-sm-3 col-sm-offset-3 col-md-5 col-md-offset-1">
  		<%= link_to new_chatroom_path, class: "btn btn-default btn-lg btn-block" do %>
			<strong>Create Chatroom</strong>
		<% end %>
	</div>
</div>

<hr />

<% if user_signed_in? %>
	<div class="row">
		<div class="col-md-5">        
	        <h2>Created Chatrooms</h5>
            <div class="list-group">
	            <% current_user.chatrooms.each do |chatroom| %>
				 	<%= link_to chatroom.name, chatroom, class: "list-group-item",
                            data: { behavior: 'chatroom-link', chatroom_id: chatroom.id }%>
                <% end %>
            </div>
    	</div>

    	<div class="col-md-2"></div>

    	<div class="col-md-5">
    		<h2>All Chatrooms</h2>

    		<table class="table table-bordered table-hover table-condensed">
				<thead>
					<tr class="warning">
					  	<th><span class="text-primary"><strong>Name</strong></span></th>
					  	<th colspan="3"></th>
					</tr>
				</thead>

				<tbody>
				    <% @chatrooms.each do |chatroom| %>
				      	<tr class="success">
					        <td><strong><span class="text-warning"><%= chatroom.name %></span></strong></td>
					        <td><strong><%= link_to 'Show', chatroom %></strong></td>			        
					        <td><strong><%= link_to 'Join', chatroom_chatroom_users_path(chatroom), method: :post %></strong></td>
					        <td><strong><%= link_to 'Leave', chatroom_chatroom_users_path(chatroom), method: :delete %></strong></td>
				      	</tr>
				    <% end %>
				</tbody>
			</table>
    	</div>
	</div>
<% end %>
